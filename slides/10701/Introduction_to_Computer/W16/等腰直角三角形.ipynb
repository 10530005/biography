      "等腰直角三角形1\n",
      " *  *  *  * \n",
      "\n",
      " *  *  * \n",
      "\n",
      " *  * \n",
      "\n",
      " * \n",
      "\n"
     ]
    }
   ],
   "source": [
    "rows = 4\n",
    "i = j = k = 1 #i用來控制外層迴圈（圖形行數），j用來控制空格的個數，k用來控制*的個數\n",
    "#等腰直角三角形\n",
    "for i in range(0, rows):\n",
    "    for k in range(0, rows - i):\n",
    "        print(\" * \",end='') #使用 end=''，可以不換行\n",
    "        k += 1\n",
    "    i += 1\n",
    "    print(\"\\n\")"
   ]
